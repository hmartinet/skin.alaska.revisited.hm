<includes>
	<include name="Viewtype_Banner">
		<control type="group">
			<visible>Control.IsVisible(508)</visible>
			<!-- Browser -->
			<control type="fixedlist" id="508">
				<viewtype label="31286">list</viewtype>
				<posx>300</posx>
				<posy>106</posy>
				<height>500</height>
				<width>990</width>
				<onup>508</onup>
				<ondown>508</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<orientation>vertical</orientation>
				<focusposition>3</focusposition>
				<movement>3</movement>
				<scrolltime>200</scrolltime>
				<pagecontrol>61</pagecontrol>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videolibrary) + Container.Content(tvshows)</visible>
				<itemlayout width="885" height="60">
					<control type="label">
						<posx>313</posx>
						<posy>10</posy>
						<width>750</width>
						<height>46</height>
						<font>Font_ListTitleNF</font>
						<textcolor>ListTrackNF</textcolor>
						<selectedcolor>ListTitleNF</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>Skin.HasSetting(HideTVWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
					</control>
					<control type="label">
						<posx>313</posx>
						<posy>10</posy>
						<width>750</width>
						<height>46</height>
						<font>Font_ListTitleNF</font>
						<textcolor>ListTrackNF</textcolor>
						<selectedcolor>ListTitleNF</selectedcolor>
						<label>$INFO[ListItem.Label]  *</label>
						<visible>!Skin.HasSetting(HideTVWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
					</control>
					<control type="label">
						<posx>313</posx>
						<posy>34</posy>
						<width>750</width>
						<height>46</height>
						<font>Font_ListDetailNF</font>
						<textcolor>ListTrackNF</textcolor>
						<selectedcolor>ListTitleF</selectedcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<control type="image">
						<posx>193</posx>
						<posy>22</posy>
						<width>100</width>
						<height>18</height>
						<colordiffuse>MediaFlagsDiffuse</colordiffuse>
						<texture>$INFO[ListItem.StarRating]</texture>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="828" height="130">
					<control type="image">
						<posx>220</posx>
						<posy>10</posy>
						<width>200</width>
						<height>128</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="359,60" start="60" end="100" time="400" tween="back" easing="out" />
						</animation>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>340</posx>
						<posy>10</posy>
						<width>520</width>
						<height>108</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>Font_PosterTitle</font>
						<textcolor>PosterTitle</textcolor>
						<wrapmultiline>True</wrapmultiline>
						<selectedcolor>ListTitleNF</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation type="Focus" reversible="false">
							<effect type="fade" start="0" end="100" time="400" delay="200" />
						</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>55</posx>
						<posy>10</posy>
						<width>570</width>
						<height>108</height>
						<texture background="true" diffuse="bannermatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="359,60" start="60" end="100" time="400" tween="back" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(banner_jpg)</visible>
					</control>
					<control type="image">
						<posx>55</posx>
						<posy>10</posy>
						<width>570</width>
						<height>108</height>
						<texture background="true" diffuse="bannermatte.png">$INFO[ListItem.Path]banner.jpg</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="359,60" start="60" end="100" time="400" tween="back" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(banner_jpg)</visible>
					</control>
					<control type="image">
						<posx>45</posx>
						<posy>0</posy>
						<width>590</width>
						<height>128</height>
						<texture>bannerframe.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="359,60" start="60" end="100" time="400" tween="back" easing="out" />
							<effect type="fade" start="50" end="100" time="400" />
						</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>596</posx>
						<posy>90</posy>
						<width>28</width>
						<height>28</height>
						<texture>$INFO[ListItem.Overlay]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="359,60" start="60" end="100" time="400" tween="back" easing="out" />
							<effect type="fade" start="50" end="100" time="400" />
						</animation>
						<visible>!Skin.HasSetting(HideTVWatchedOverlays)</visible>
					</control>
					<control type="image">
						<posx>596</posx>
						<posy>90</posy>
						<width>28</width>
						<height>28</height>
						<texture>New.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="359,60" start="60" end="100" time="400" tween="back" easing="out" />
							<effect type="fade" start="50" end="100" time="400" />
						</animation>
						<visible>Container.Content(TVShows) + !Skin.HasSetting(HideNewEpisodes) + !stringcompare(ListItem.Overlay,OverlayWatched.png) + [StringCompare(Window(Home).Property(LatestEpisode.1.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.2.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.3.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.4.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.5.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.6.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.7.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.8.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.9.ShowTitle),ListItem.Label) | StringCompare(Window(Home).Property(LatestEpisode.10.ShowTitle),ListItem.Label)]</visible>
					</control>
				</focusedlayout>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
