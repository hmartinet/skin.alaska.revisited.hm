<window id="2004">
	<defaultcontrol>-</defaultcontrol>
	<animation type="WindowOpen">
		<effect type="slide" start="-600,0" end="0,0" time="600" tween="cubic" easing="out" delay="600" />
		<effect type="fade" start="0" end="100" time="600" delay="600" />
	</animation>
	<animation type="WindowClose">
		<effect type="slide" start="0,0" end="-200,0" time="600" tween="cubic" easing="out" />
		<effect type="fade" start="100" end="0" time="600" />
	</animation>
	<controls>
		<control type="group">
			<posx>30</posx>
			<posy>520</posy>
			<animation effect="slide" start="0,0" end="-312,0" time="400" condition="Window.IsActive(filemanager) | Window.IsActive(musicplaylisteditor)">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,-30" time="400" condition="system.getbool(lookandfeel.enablerssfeeds) + Window.IsActive(home)">Conditional</animation>
			<animation effect="slide" start="0,0" end="-312,0" time="400" condition="Skin.HasSetting(BackgroundVid)">Conditional</animation>
			<control type="group">
				<visible>!Skin.HasSetting(BackgroundVid)</visible>
				<animation effect="slide" start="0,0" end="0,-30" time="400" condition="Window.IsActive(PlayerControls) + !Window.IsActive(home)">Conditional</animation>
				<control type="image">
					<width>300</width>
					<height>174</height>
					<texture border="2">black.png</texture>
					<bordertexture border="8">thumb_border.png</bordertexture>
					<bordersize>6</bordersize>
				</control>
				<control type="videowindow" id="1">
					<description>Video Preview</description>
					<posx>6</posx>
					<posy>6</posy>
					<width>288</width>
					<height>162</height>
				</control>
			</control>
			<control type="group">
				<visible>!Window.IsActive(videolibrary) | [Window.IsActive(videolibrary) + Skin.HasSetting(HideMediaInfo)]</visible>
				<control type="label">
					<posx>312</posx>
					<posy>80</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width>200</width>
					<font>Font_OSDInfoLabel</font>
					<label>[B]$LOCALIZE[13350][/B]</label>
					<textcolor>NowPlayingTitle</textcolor>
					<visible>Skin.HasSetting(BackgroundVid)</visible>
					<animation effect="slide" end="0,26" condition="IsEmpty(VideoPlayer.TVShowTitle)">Conditional</animation>
				</control>
				<control type="fadelabel">
					<posx>312</posx>
					<posy>112</posy>
					<width>906</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>Font_NowPlayingTrack</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingDetails1</textcolor>
					<animation effect="slide" end="0,26" condition="IsEmpty(VideoPlayer.TVShowTitle)">Conditional</animation>
				</control>
				<control type="grouplist">
					<posx>312</posx>
					<posy>142</posy>
					<width>906</width>
					<height>30</height>
					<itemgap>10</itemgap>
					<align>left</align>
					<orientation>horizontal</orientation>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>30</height>
						<aligny>center</aligny>
						<width min="10" max="906">auto</width>
						<font>Font_NowPlayingArtist</font>
						<label>$INFO[VideoPlayer.TVShowTitle]</label>
						<textcolor>NowPlayingTitle</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>30</height>
						<aligny>center</aligny>
						<width min="10" max="906">auto</width>
						<font>Font_NowPlayingAlbum</font>
						<label>$INFO[VideoPlayer.Season, $LOCALIZE[20373] ]</label>
						<textcolor>NowPlayingDetails2</textcolor>
					</control>
				</control>
			</control>
			<control type="group">
				<visible>Window.IsActive(videolibrary) + !Skin.HasSetting(HideMediaInfo)</visible>
				<control type="label">
					<posx>312</posx>
					<posy>80</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width>200</width>
					<font>Font_OSDInfoLabel</font>
					<label>[B]$LOCALIZE[13350][/B]</label>
					<textcolor>NowPlayingTitle</textcolor>
					<visible>Skin.HasSetting(BackgroundVid)</visible>
					<animation effect="slide" end="0,26" condition="IsEmpty(VideoPlayer.TVShowTitle)">Conditional</animation>
				</control>
				<control type="fadelabel">
					<posx>312</posx>
					<posy>112</posy>
					<width>906</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>Font_NowPlayingTrack</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingDetails1</textcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="fadelabel">
					<posx>312</posx>
					<posy>138</posy>
					<width>360</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>Font_NowPlayingTrack</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingDetails1</textcolor>
					<visible>IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="grouplist">
					<posx>312</posx>
					<posy>142</posy>
					<width>360</width>
					<height>30</height>
					<itemgap>10</itemgap>
					<align>left</align>
					<orientation>horizontal</orientation>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>30</height>
						<aligny>center</aligny>
						<width min="10" max="360">auto</width>
						<font>Font_NowPlayingArtist</font>
						<label>$INFO[VideoPlayer.TVShowTitle]</label>
						<textcolor>NowPlayingTitle</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>30</height>
						<aligny>center</aligny>
						<width min="10" max="360">auto</width>
						<font>Font_NowPlayingAlbum</font>
						<label>$INFO[VideoPlayer.Season, $LOCALIZE[20373] ]</label>
						<textcolor>NowPlayingDetails2</textcolor>
					</control>
				</control>
			</control>
		</control>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
	</controls>
</window>
