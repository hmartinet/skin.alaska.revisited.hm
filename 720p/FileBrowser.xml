<window id="126">
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>Global_Background</include>		
		<include condition="Skin.HasSetting(BackgroundVis) | Skin.HasSetting(BackgroundVid)">BackgroundVisuals</include>
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<fadetime>400</fadetime>
			<texture background="true">$INFO[Container(450).ListItem.Icon]</texture>
			<colordiffuse>PicturesDiffuse</colordiffuse>
			<aspectratio aligny="top">scale</aspectratio>
			<include>Animation_CommonFade</include>
			<visible>substring(listitem.filenameandpath,jpg) | substring(listitem.filenameandpath,bmp) | substring(listitem.filenameandpath,png) | substring(listitem.filenameandpath,tif) | substring(listitem.filenameandpath,ico) | substring(listitem.filenameandpath,pcx) | substring(listitem.filenameandpath,tga)</visible>
		</control>
		<control type="fixedlist" id="450">
			<posx>690</posx>
			<posy>116</posy>
			<height>468</height>
			<width>590</width>
			<onup>450</onup>
			<ondown>450</ondown>
			<onleft>7001</onleft>
			<onright>60</onright>
			<scrolltime>120</scrolltime>
			<viewtype label="">list</viewtype>
			<orientation>vertical</orientation>
			<focusposition>7</focusposition>
			<pagecontrol>60</pagecontrol>
			<include>Animation_ZoomInZoomOut</include>
			<animation type="Conditional" condition="Window.IsActive(contextmenu)">
				<effect type="zoom" time="600" center="640,360" start="100" end="50" tween="cubic" easing="inout" />
				<effect type="fade" time="400" start="100" end="20" />
			</animation>
			<itemlayout width="0" height="30">
				<control type="label">
					<posx>20</posx>
					<posy>0</posy>
					<width>550</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>Font_FileLabel</font>
					<textcolor>FilesLabel</textcolor>
					<selectedcolor>ListTitleNF</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
					<scroll>false</scroll>
				</control>
			</itemlayout>
			<focusedlayout width="0" height="42">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>590</width>
					<height>42</height>
					<aligny>center</aligny>
					<texture>ButtonFo.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(450)">Conditional</animation>
				</control>
				<control type="fadelabel">
					<posx>20</posx>
					<posy>0</posy>
					<width>550</width>
					<height>42</height>
					<aligny>center</aligny>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>Font_FileLabelFO</font>
					<textcolor>ButtonText</textcolor>
					<selectedcolor>TextSelected</selectedcolor>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Size,  |  ]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="image">
			<include>Animation_ZoomInZoomOut</include>
			<posx>300</posx>
			<posy>124</posy>
			<width>360</width>
			<height>440</height>
			<fadetime>100</fadetime>
			<aspectratio align="right" aligny="center">keep</aspectratio>
			<texture>$INFO[ListItem.Icon]</texture>
			<bordertexture border="22">file_border.png</bordertexture>
			<bordersize>22</bordersize>
			<visible>!substring(ListItem.Icon,default)</visible>
		</control>
		<control type="image">
			<include>Animation_ZoomInZoomOut</include>
			<posx>300</posx>
			<posy>124</posy>
			<width>360</width>
			<height>440</height>
			<fadetime>100</fadetime>
			<aspectratio align="right" aligny="center">keep</aspectratio>
			<texture>$INFO[ListItem.Icon]</texture>
			<visible>substring(ListItem.Icon,default)</visible>
		</control>
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture fallback="background.png">$INFO[Skin.String(CustomBackground)]</texture>
			<colordiffuse>GlobalColour</colordiffuse>
			<visible>ControlGroup(7000).HasFocus | Window.IsActive(contextmenu)</visible>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="400">Hidden</animation>
		</control>
		<!-- view options -->
		<control type="grouplist" id="7001">
			<include>Animation_ZoomInZoomOut</include>
			<posx>-110</posx>
			<posy>280</posy>
			<onleft>-</onleft>
			<onright>450</onright>
			<onup>7001</onup>
			<ondown>7001</ondown>
			<control type="button" id="414">
				<description>Cancel</description>
				<posx>0</posx>
				<posy>95</posy>
				<include>SettingsLabelLeft</include>
				<label>222</label>
			</control>
			<control type="button" id="413">
				<description>Ok</description>
				<posx>0</posx>
				<posy>133</posy>
				<include>SettingsLabelLeft</include>
				<label>186</label>
			</control>
			<control type="button" id="415">
				<description>Create Folder</description>
				<posx>0</posx>
				<posy>171</posy>
				<include>SettingsLabelLeft</include>
				<label>119</label>
			</control>
		</control>
		<!-- Scroll Bar -->
		<control type="scrollbar" id="60">
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<posx>1270</posx>
			<posy>110</posy>
			<width>18</width>
			<height>474</height>
			<visible allowhiddenfocus="true">Control.IsVisible(450) + Control.HasFocus(60)</visible>
			<texturesliderbackground>-</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
			<onleft>450</onleft>
			<onright>-</onright>
			<showonepage>true</showonepage>
			<orientation>vertical</orientation>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60)">Conditional</animation>
		</control>
		<!-- Heading -->
		<control type="group">
			<posx>30</posx>
			<posy>26</posy>
			<include>Animation_SlideDownFadeOut</include>
			<control type="label" id="411">
				<label>-</label>
				<include>Global_HeadingSectionVars</include>
			</control>
			<control type="label">
				<label>$INFO[ListItem.path]</label>
				<include>Global_HeadingDetailVars</include>
			</control>
		</control>
		<include>Global_Time</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
	</controls>
</window>
