<includes>
	<include name="Viewtype_Panel_Square">
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<!-- Browser -->
			<control type="panel" id="58">
				<viewtype label="31298">icon</viewtype>
				<posx>480</posx>
				<posy>140</posy>
				<width>720</width>
				<height>480</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(programs) | Container.Content(Addons) | Container.Content(Albums) | Container.Content(Artists)</visible>
				<itemlayout width="120" height="120">
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>110</width>
						<height>110</height>
						<texture>wall/musicwallmatte.png</texture>
						<colordiffuse>MatteDiffuse</colordiffuse>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>110</width>
						<height>110</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<colordiffuse>PanelDiffuse</colordiffuse>
						<visible>IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>110</width>
						<height>110</height>
						<texture background="true" diffuse="wall/musicwallmatte.png">$INFO[ListItem.Icon]</texture>
						<colordiffuse>PanelDiffuse</colordiffuse>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>4</posy>
						<width>114</width>
						<height>114</height>
						<texture>wall/musicwallframeNF.png</texture>
						<colordiffuse>PanelDiffuse</colordiffuse>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="120" height="120">
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>110</width>
						<height>110</height>
						<texture>wall/musicwallmatte.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="80" end="120" time="400" tween="back" easing="out" />
							<effect type="fade" start="80" end="100" time="400" />
						</animation>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>110</width>
						<height>110</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="80" end="120" time="400" tween="back" easing="out" />
							<effect type="fade" start="80" end="100" time="400" />
						</animation>
						<visible>IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>6</posx>
						<posy>6</posy>
						<width>110</width>
						<height>110</height>
						<texture background="true" diffuse="wall/musicwallmatte.png">$INFO[ListItem.Icon]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="80" end="120" time="400" tween="back" easing="out" />
							<effect type="fade" start="80" end="100" time="400" />
						</animation>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>2</posx>
						<posy>2</posy>
						<width>118</width>
						<height>118</height>
						<texture>panelsquareframeFO.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="80" end="120" time="400" tween="back" easing="out" />
							<effect type="fade" start="80" end="100" time="400" />
						</animation>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
				</focusedlayout>
			</control>
			<include>InfoPanel</include>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
